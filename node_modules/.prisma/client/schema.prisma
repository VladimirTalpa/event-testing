generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id      String @id @default(cuid())
  guildId String
  userId  String

  // мета для боёвки/кд
  survivalBonus Int    @default(0)
  lastDaily     BigInt @default(0)
  lastClash     BigInt @default(0)

  balances Balance[]
  items    Item[]

  @@unique([guildId, userId])
}

model Balance {
  id       String @id @default(cuid())
  guildId  String
  userId   String
  eventKey String // "bleach", "jjk", ...
  currency String // "reiatsu", ...
  amount   Int    @default(0)

  player Player @relation(fields: [guildId, userId], references: [guildId, userId], onDelete: Cascade)

  @@unique([guildId, userId, eventKey, currency])
}

model Item {
  id       String  @id @default(cuid())
  guildId  String
  userId   String
  eventKey String
  key      String // "zanpakuto_basic", ...
  owned    Boolean @default(true)

  player Player @relation(fields: [guildId, userId], references: [guildId, userId], onDelete: Cascade)

  @@unique([guildId, userId, eventKey, key])
}
